.leftColumn {
  @extend $hiddenScrollbar

  position: fixed
  top: $HeaderHeight + 1
  bottom: 0
  margin-right: $StandardPadding
  width: 290px - 1
  overflow-y: scroll
  transition: top $TransitionDuration

  .toggle {
    width: 1.2em
    top: 0
    right: 0
    padding-right: 0
  }

  .option {
    display: block
    overflow: hidden
    line-height: 24px
  }

  .option-separator {
    border-top: 1px solid #ececec
    padding-top: 1em
    margin-top: 1em
  }

  .extra-option {
    font-size: 12px
    margin-top: 5px
  }

  .heading-small {
    padding-bottom: 6px
    margin-bottom: 0
  }
}

.transition .leftColumn {
  top: $HeaderHeight + $StandardPadding + $TransitionHeight
}


.leftColumn-selected {
  display: flex
  justify-content: space-between
  align-items: flex-end
  line-height: 1.4em
}

.leftColumn-stats {
  font-size: 16px
}

.leftColumn-toggle {
  border: none
  background: none
  cursor: pointer
  padding: 0

  &:hover,
  &:focus {
  color: $ModernizrPink
  outline: none
  }
}

.leftColumn-options {
  padding: 0 24px 12px
  padding-bottom: $StandardPadding
  background: $White
}

.classPrefix {
  border: $lightBorder
  line-height: 1.3em
  float: right
  padding: 2px 5px
  font-size: 12px
  width: 100px
  margin-right: 20px
  &:focus {
    border-color: $DarkGrey
    outline: 0
  }
}

.classNameAdded {
  background: $ModernizrPink
  color: $White
}

.filesizes {
  color: #909090
  font-size: 12px
  padding: 0.5em 0
}

@media (max-width: $largeScreen) {
  .leftColumn {
    position: absolute
    top: $HeaderHeight
    width: 100%
    z-index: 2
    bottom: auto
    border-top: $lightBorder

    .heading-small {
      background: $ModernizrPink
      color: $White
      text-align: center
      line-height: $HeaderButtonHeight
      text-transform: uppercase
      padding: 0
      cursor: pointer
      -webkit-user-select: none
      user-select: none
    }
  }

  .leftColumn-options {
    padding: 12px 24px
    display: none

    .option {
      line-height: 40px
      font-size: 20px
    }

    .extra-option {
      font-size: 12px
      line-height: 1.2
    }
  }

  .leftColumn-stats {
    min-height: $StatsHeight
    display: flex
    flex-direction: column
    justify-content: center
  }

  .heading-small.active + .leftColumn-options {
    display: block
  }
}

.leftColumn-checked {
  display: flex
  justify-content: space-between
}

@media (max-width: $mediumScreen) {
  .leftColumn {
    top: $HeaderHeight + $HeaderButtonHeight
  }
}

@media (max-width: $smallScreen) {
  .leftColumn {
    top: $SmallHeaderHeight + $HeaderButtonHeight
    z-index: initial
  }

  .leftColumn-options {
    position: relative
    z-index: 1
  }
}
